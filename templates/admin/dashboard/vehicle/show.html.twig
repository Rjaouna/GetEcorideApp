{# templates/vehicle/show.html.twig #}
{% extends 'template.html.twig' %}

{% block title %}Détails véhicule{% endblock %}

{% block body %}


<div class="row">
  {# Carte principale #}
  <div class="col-lg-8 mb-4">
    <div class="card shadow">
      <div class="card-header py-3 d-flex justify-content-between align-items-center">
        <h6 class="m-0 font-weight-bold text-primary">
<i class="fas fa-car"></i>
Détails du véhicule

        </h6>
        <span class="badge badge-pill {{ vehicle.isActive ? 'badge-primary' : 'badge-secondary' }}">
          {{ vehicle.isActive ? 'Actif' : 'Inactif' }}
        </span>
      </div>

      <div class="card-body">
        <div class="row">
          <div class="col-md-6 mb-3">
            <div class="small text-muted">Immatriculation</div>
            <div class="h5 mb-0 font-weight-bold text-gray-900">{{ vehicle.plateNumber }}</div>
          </div>
          <div class="col-md-6 mb-3">
            <div class="small text-muted">1ère mise en circulation</div>
            <div class="h5 mb-0">
              {{ vehicle.firstRegistrationAt ? vehicle.firstRegistrationAt|date('d/m/Y') : '—' }}
            </div>
          </div>

          <div class="col-md-4 mb-3">
            <div class="small text-muted">Marque</div>
            <div class="h6 mb-0">{{ vehicle.brand }}</div>
          </div>
          <div class="col-md-4 mb-3">
            <div class="small text-muted">Modèle</div>
            <div class="h6 mb-0">{{ vehicle.model }}</div>
          </div>
          <div class="col-md-4 mb-3">
            <div class="small text-muted">Sièges</div>
            <div class="h6 mb-0">{{ vehicle.seats }}</div>
          </div>

          <div class="col-md-4 mb-3">
            <div class="small text-muted">Électrique</div>
            {% if vehicle.isElectric %}
              <span class="badge badge-success"><i class="fas fa-bolt"></i> Oui</span>
            {% else %}
              <span class="badge badge-secondary">Non</span>
            {% endif %}
          </div>

          <div class="col-md-4 mb-3">
            <div class="small text-muted">Propriétaire</div>
            <div class="h6 mb-0">
              {% if vehicle.owner is defined and vehicle.owner %}
                <i class="fas fa-user"></i>
                {{ vehicle.owner.pseudo ?? vehicle.owner.email }}
              {% else %}
                —
              {% endif %}
            </div>
          </div>
        </div>
      </div>

      <div class="card-footer d-flex justify-content-between">
        <small class="text-muted">
          <i class="far fa-clock"></i>
          Créé le :
          {{ vehicle.createdAt ? vehicle.createdAt|date('d/m/Y H:i') : '—' }}
        </small>
        <small class="text-muted">
          <i class="far fa-edit"></i>
          MAJ :
          {{ vehicle.updatedAt ? vehicle.updatedAt|date('d/m/Y H:i') : '—' }}
        </small>
      </div>
    </div>
  </div>

  {# Carte “Résumé rapide” #}
  <div class="col-lg-4 mb-4">
    <div class="card border-left-info shadow h-100 py-2">
      <div class="card-body">
        <div class="text-xs font-weight-bold text-info text-uppercase mb-3">
          <i class="fas fa-info-circle"></i> Résumé
        </div>

        <ul class="list-group list-group-flush">
          <li class="list-group-item d-flex justify-content-between align-items-center">
            ID
            <span class="badge badge-light">{{ vehicle.id }}</span>
          </li>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            Statut
            <span class="badge {{ vehicle.isActive ? 'badge-primary' : 'badge-secondary' }}">
              {{ vehicle.isActive ? 'Actif' : 'Inactif' }}
            </span>
          </li>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            Énergie
            <span class="badge {{ vehicle.isElectric ? 'badge-success' : 'badge-secondary' }}">
              {{ vehicle.isElectric ? 'Électrique' : 'Thermique' }}
            </span>
          </li>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            Sièges
            <span class="badge badge-info">{{ vehicle.seats }}</span>
          </li>
        </ul>

        <div class="mt-3 d-flex">
          <a href="{{ path('app_vehicle_edit', {'id': vehicle.id}) }}" class="btn btn-warning btn-sm mr-2">
            <i class="fas fa-edit"></i> Modifier
          </a>
          <a href="{{ path('app_vehicle_index') }}" class="btn btn-light btn-sm">
            <i class="fas fa-list"></i> Liste
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
{% endblock %}
