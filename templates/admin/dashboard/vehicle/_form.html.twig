{# templates/admin/dashboard/vehicle/_form.html.twig #}
{{ form_start(form, { attr: { class: 'user' } }) }}


{# Affiche les erreurs globales du formulaire #}
{% if not form.vars.valid %}
	<div class="alert alert-danger">
		{{ form_errors(form) }}
	</div>
{% endif %}

<div class="form-group row">
	<div class="col-sm-6 mb-3 mb-sm-0">
		{{ form_row(form.plateNumber, { label: 'Immatriculation', attr: { class: 'form-control form-control-user', placeholder: 'Immatriculation' } }) }}
	</div>
<div class="col-sm-6">
{{ form_row(form.owner, { label: 'Conducteur', attr: { class: 'custom-select rounded-pill py-2' } }) }}


</div>

</div>

<div class="form-group row">
	<div class="col-sm-6 mb-3 mb-sm-0">
		{{ form_row(form.brand, { label: 'Marque', attr: { class: 'form-control form-control-user', placeholder: 'Marque' } }) }}
	</div>
	<div class="col-sm-6">
{{ form_row(form.model, { label: 'Modèle', attr: { class: 'form-control form-control-user', placeholder: 'Modèle' } }) }}

	</div>
</div>

<div class="form-group row">
	<div class="col-sm-6 mb-3 mb-sm-0">
		{{ form_row(form.seats, { label: 'Nombre de places', attr: { class: 'form-control form-control-user', placeholder: 'Nombre de sièges' } }) }}
	</div>
	
<div class="col-sm-6">
	{{ form_row(form.firstRegistrationAt, { label: 'Date de le première immatriculation', attr: { class: 'form-control form-control-user', placeholder: '1ère mise en circulation' } }) }}
</div>

</div>

<div class="row g-3 mb-3">

	<div class="col-sm-6">
		<div class="card option-card shadow-sm h-100">
			<div class="card-body d-flex align-items-center">
				<div class="custom-control custom-switch">
					{{ form_widget(form.isElectric, { attr: { class: 'custom-control-input option-switch' } }) }}
					{{ form_label(form.isElectric, null, { label_attr: { class: 'custom-control-label fw-semibold h6 mb-0' } }) }}
					{{ form_errors(form.isElectric) }}
				</div>
<small class="ms-3 d-none d-sm-block mx-3  text-primary">
	Active si le véhicule est 100% électrique.</small>

			</div>
		</div>
	</div>

	<div class="col-sm-6">
		<div class="card option-card shadow-sm h-100">
			<div class="card-body d-flex align-items-center">
				<div class="custom-control custom-switch">
					{{ form_widget(form.isActive, { attr: { class: 'custom-control-input option-switch' } }) }}
					{{ form_label(form.isActive, null, { label_attr: { class: 'custom-control-label fw-semibold h6 mb-0' } }) }}
					{{ form_errors(form.isActive) }}
				</div>
				<small class="ms-3 d-none d-sm-block mx-3 text-primary"> Active/désactive la visibilité et la commande.</small>
			</div>
		</div>
	</div>

</div>




<button type="submit" class="btn btn-primary btn-user btn-block">
	{{ button_label|default(form.vars.value.id is defined and form.vars.value.id ? 'Mettre à jour le véhicule' : 'Enregistrer le véhicule') }}
</button>
{{ form_end(form) }}

