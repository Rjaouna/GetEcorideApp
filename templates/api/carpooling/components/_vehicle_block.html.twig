 <script>
document.addEventListener('DOMContentLoaded', async () => {
  const id = {{ id ?? 'null' }};
  if (!id) return;

  const container = document.getElementById('vehicle-block');
  container.innerHTML = `
    <div class="text-center text-muted py-4">
      <div class="spinner-border text-primary" role="status"></div>
      <div>Chargement du véhicule...</div>
    </div>
  `;

  const carpoolingUrl = "{{ path('api_carpooling_show', { id: 0 }) }}".replace('/0', `/${id}`);

  try {
    const response = await fetch(carpoolingUrl);
    const ride = await response.json();
    const vehicle = ride.vehicle;

    if (!vehicle) {
      container.innerHTML = `
        <div class="alert alert-warning text-center mt-3">
          <i class="bi bi-car-front-fill me-2"></i>
          Véhicule non défini pour ce trajet.
        </div>
      `;
      return;
    }

    container.innerHTML = `
      <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
        <div class="card-header bg-primary text-white d-flex align-items-center">
          <i class="bi bi-car-front-fill fs-4 me-2"></i>
          <h5 class="mb-0">Véhicule du conducteur</h5>
        </div>

        <div class="card-body bg-light d-flex flex-column flex-md-row align-items-center p-4">
          <div class="vehicle-icon bg-secondary bg-opacity-10 d-flex align-items-center justify-content-center rounded-circle me-md-4 mb-3 mb-md-0" style="width:100px;height:100px;">
            <i class="bi bi-car-front fs-1 text-secondary"></i>
          </div>

          <div class="flex-grow-1">
            <h5 class="fw-bold text-dark mb-2">${vehicle.brand ?? '—'} ${vehicle.model ?? ''}</h5>
            <p class="mb-1 text-muted">
              <i class="bi bi-palette-fill text-primary me-2"></i>
              <strong>Couleur :</strong> ${vehicle.color ?? '—'}
            </p>
            <p class="mb-0 text-muted">
              <i class="bi bi-card-text text-success me-2"></i>
              <strong>Immatriculation :</strong> ${vehicle.plateNumber ?? '—'}
            </p>
          </div>
        </div>
      </div>
    `;
  } catch (error) {
    console.error(error);
    container.innerHTML = `
      <div class="alert alert-danger text-center mt-4">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        Erreur lors du chargement du véhicule.
      </div>
    `;
  }
});
</script>

