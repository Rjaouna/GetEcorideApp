 <script>
document.addEventListener('DOMContentLoaded', async () => {
  const id = {{ id ?? 'null' }};
  if (!id) return;

  const container = document.getElementById('vehicle-block');
const carpoolingUrl = "{{ path('api_carpooling_show', { id: 0 }) }}".replace('/0', `/${id}`);


  try {
const response = await fetch(carpoolingUrl);



    const ride = await response.json();
    const vehicle = ride.vehicle;

    container.innerHTML = `
      <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-light">
          <h5 class="mb-0"><i class="bi bi-car-front text-primary"></i> Véhicule</h5>
        </div>
        <div class="card-body">
          ${vehicle ? `
            <p><strong>Marque :</strong> ${vehicle.brand}</p>
            <p><strong>Modèle :</strong> ${vehicle.model}</p>
            <p><strong>Couleur :</strong> ${vehicle.color}</p>
<p>
	<strong>Immatriculation :</strong>
	${vehicle.plateNumber}</p>

          ` : '<p class="text-muted mb-0">Véhicule non défini.</p>'}
        </div>
      </div>
    `;
  } catch (error) {
    container.innerHTML = `<div class="alert alert-danger text-center">Erreur de chargement du véhicule.</div>`;
  }
});
</script>

