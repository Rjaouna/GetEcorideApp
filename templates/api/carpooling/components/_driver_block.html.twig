 <script>
document.addEventListener('DOMContentLoaded', async () => {
  const id = {{ id ?? 'null' }};
  if (!id) return;

  const container = document.getElementById('driver-block');
  container.innerHTML = `
    <div class="text-center text-muted py-4">
      <div class="spinner-border text-primary" role="status"></div>
      <div>Chargement du conducteur...</div>
    </div>
  `;

  const carpoolingUrl = "{{ path('api_carpooling_show', { id: 0 }) }}".replace('/0', `/${id}`);

  try {
    const response = await fetch(carpoolingUrl);
    const ride = await response.json();
    const driver = ride.driver;

    if (!driver) {
      container.innerHTML = `<div class="alert alert-warning text-center mt-3">
        <i class="bi bi-person-exclamation me-2"></i>
        Conducteur non défini pour ce trajet.
      </div>`;
      return;
    }

    container.innerHTML = `
<div class="card border-0 shadow-sm rounded-4 overflow-hidden">

        <div class="card-header bg-primary text-white d-flex align-items-center">
          <i class="bi bi-person-fill fs-4 me-2"></i>
          <h5 class="mb-0">Conducteur</h5>
        </div>

        <div class="card-body bg-light d-flex flex-column flex-md-row align-items-center p-4">
          <div class="avatar-wrapper mb-3 mb-md-0 me-md-4">
            <div class="rounded-circle bg-secondary bg-opacity-10 d-flex align-items-center justify-content-center" style="width:100px; height:100px;">
              <i class="bi bi-person-circle fs-1 text-secondary"></i>
            </div>
          </div>

          <div class="flex-grow-1">
            <h5 class="fw-bold text-dark mb-1">${driver.firstName ?? ''} ${driver.lastName ?? ''}</h5>
            <p class="text-muted mb-2"><i class="bi bi-envelope-fill text-primary me-2"></i>${driver.email ?? '—'}</p>
            <p class="text-muted mb-0"><i class="bi bi-telephone-fill text-success me-2"></i>${driver.phone ?? '—'}</p>
          </div>

          <div class="mt-3 mt-md-0 text-md-end">
            <a href="mailto:${driver.email}" class="btn btn-outline-primary btn-sm me-2">
              <i class="bi bi-envelope"></i> Contacter
            </a>
            <a href="tel:${driver.phone}" class="btn btn-outline-success btn-sm">
              <i class="bi bi-telephone"></i> Appeler
            </a>
          </div>
        </div>
      </div>
    `;
  } catch (error) {
    console.error(error);
    container.innerHTML = `
      <div class="alert alert-danger text-center mt-4">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        Erreur lors du chargement du conducteur.
      </div>
    `;
  }
});
</script>

