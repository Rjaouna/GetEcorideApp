 <script>
document.addEventListener('DOMContentLoaded', async () => {
  const id = {{ id ?? 'null' }};
  if (!id) return;

  const container = document.getElementById('driver-block');
  container.innerHTML = `
    <div class="text-center text-muted py-4">
      <div class="spinner-border text-primary" role="status"></div>
      <div>Chargement du conducteur...</div>
    </div>
  `;

  const carpoolingUrl = "{{ path('api_carpooling_show', { id: 0 }) }}".replace('/0', `/${id}`);

  try {
    const response = await fetch(carpoolingUrl);
    const ride = await response.json();
    const driver = ride.driver;
    const reviews = ride.driverReviews ?? [];

    if (!driver) {
      container.innerHTML = `
        <div class="alert alert-warning text-center mt-3">
          <i class="bi bi-person-exclamation me-2"></i>
          Conducteur non défini pour ce trajet.
        </div>`;
      return;
    }

    // --- Calcul de la moyenne des étoiles ---
    let averageRating = 0;
    if (reviews.length > 0) {
      const validRatings = reviews
        .map(r => parseFloat(r.rating))
        .filter(r => !isNaN(r));
      if (validRatings.length > 0) {
        averageRating = validRatings.reduce((a, b) => a + b, 0) / validRatings.length;
      }
    }

    // --- Génération des étoiles ---
    function generateStars(rating) {
      const rounded = Math.round(rating * 2) / 2; // arrondi à 0.5 près
      let starsHtml = '';
      for (let i = 1; i <= 5; i++) {
        if (i <= rounded) {
          starsHtml += '<i class="bi bi-star-fill text-warning"></i>';
        } else if (i - 0.5 === rounded) {
          starsHtml += '<i class="bi bi-star-half text-warning"></i>';
        } else {
          starsHtml += '<i class="bi bi-star text-warning opacity-50"></i>';
        }
      }
      return starsHtml;
    }

    const starsDisplay = averageRating > 0
      ? `<div class="mt-2">${generateStars(averageRating)} <span class="small text-muted ms-1">(${averageRating.toFixed(1)})</span></div>`
      : `<div class="mt-2 text-muted small fst-italic">Aucune note</div>`;

    // --- Bloc principal conducteur ---
    container.innerHTML = `
      <div class="card border-0 shadow-sm rounded-4 overflow-hidden">

        <div class="card-header bg-primary text-white d-flex align-items-center">
          <i class="bi bi-person-fill fs-4 me-2"></i>
          <h5 class="mb-0">Conducteur</h5>
        </div>

        <div class="card-body bg-light d-flex flex-column flex-md-row align-items-center p-4">
          <div class="avatar-wrapper mb-3 mb-md-0 me-md-4">
            <div class="rounded-circle bg-secondary bg-opacity-10 d-flex align-items-center justify-content-center" 
                 style="width:100px; height:100px;">
              <i class="bi bi-person-circle fs-1 text-secondary"></i>
            </div>
          </div>

          <div class="flex-grow-1 text-center text-md-start">
            <h5 class="fw-bold text-dark mb-1">
              ${driver.firstName ?? ''} ${driver.lastName ?? ''}
            </h5>
            ${starsDisplay}
            <p class="text-muted mb-2 mt-2">
              <i class="bi bi-envelope-fill text-primary me-2"></i>${driver.email ?? '—'}
            </p>
            <p class="text-muted mb-0">
              <i class="bi bi-telephone-fill text-success me-2"></i>${driver.phone ?? '—'}
            </p>
          </div>

       
        </div>
      </div>
    `;

  } catch (error) {
    console.error(error);
    container.innerHTML = `
      <div class="alert alert-danger text-center mt-4">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        Erreur lors du chargement du conducteur.
      </div>`;
  }
});
</script>

