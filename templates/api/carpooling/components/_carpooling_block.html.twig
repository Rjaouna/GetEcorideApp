 <script>
document.addEventListener('DOMContentLoaded', async () => {
  const id = {{ id ?? 'null' }}; // tu peux passer l'ID depuis ton contrôleur show()
  if (!id) return;

  const container = document.getElementById('carpooling-block');
  container.innerHTML = `<div class="text-center text-muted">Chargement du trajet...</div>`;
const carpoolingUrl = "{{ path('api_carpooling_show', { id: 0 }) }}".replace('/0', `/${id}`);

  try {
const response = await fetch(carpoolingUrl);



    const ride = await response.json();
	console.log(ride);

    container.innerHTML = `
      <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
          <h5 class="mb-0">
            <i class="bi bi-geo-alt-fill text-primary"></i> Informations du trajet
          </h5>
          <div>
            ${ride.ecoTag ? '<span class="badge bg-success"><i class="bi bi-leaf"></i> Éco</span>' : ''}
          </div>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-6">
              <p><strong>Départ :</strong> ${ride.deparatureCity}</p>
              <p><strong>Arrivée :</strong> ${ride.arrivalCity}</p>
              <p><strong>Date de départ :</strong> ${new Date(ride.deparatureAt).toLocaleString('fr-FR')}</p>
            </div>
            <div class="col-md-6">
              <p><strong>Prix :</strong> ${ride.price} €</p>
              <p><strong>Places disponibles :</strong> ${ride.seatsAvaible ?? ride.seatsTotal}</p>
            </div>
          </div>
        </div>
      </div>
    `;
  } catch (error) {
    container.innerHTML = `<div class="alert alert-danger text-center">Erreur de chargement du trajet.</div>`;
  }
});
</script>

